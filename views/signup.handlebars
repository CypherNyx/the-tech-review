<div class="col-md-4 col-md-offset-4">
    <div class="well">
        <h2>Sign Up</h2>
        <form class="signup-form">
            <div class="form-group">
                <label for="user-signup">username:</label>
                <input type="text" class="form-control" id="user-signup" placeholder="Your Username *" />
            </div>
            <div class="form-group">
                <label for="email-signup">email:</label>
                <input class="form-control" type="text" id="email-signup" />
            </div>
            <div class="form-group">
                <label for="password-signup">password:</label>
                <input type="password" class="form-control" id="password-signup"
                    placeholder="Your Password (minimum 8 characters) *" />
            </div>
            <div class="form-group">
                <input type="submit" class="btnSubmit btn btn-default btnSubmit" value="Create Account" />
            </div>
            <div class="form-group">
                <a href="/login" id="submit" class="btn">Already have an account? Click here to log in!</a>
            </div>
        </form>
    </div>
</div>
<script src="/js/signup.js"></script>